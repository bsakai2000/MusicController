{

	"description": "A music controller for Google Play Music",
	"manifest_version": 2,
	"name": "MusicController",
	"version": "1.0",

	"browser_specific_settings": {
		"gecko": {
			"id": "music_controller@example.com",
			"strict_min_version": "50.0"
		}
	},

	"background": {
		"scripts": ["background.js"]
	},

	"permissions": [
		"nativeMessaging",
		"tabs",
		"*://play.google.com/music*"
	]

}
