{

	"description": "An MPRIS controller for several media sites",
	"manifest_version": 2,
	"name": "MusicController",
	"version": "1.7",

	"browser_specific_settings": {
		"gecko": {
			"id": "music_controller@example.com",
			"strict_min_version": "54.0"
		}
	},

	"background": {
		"scripts": ["background.js"]
	},

	"permissions": [
		"nativeMessaging",
		"tabs",
		"*://play.google.com/music*",
		"*://*.youtube.com/*",
		"*://*.netflix.com/*",
		"*://*.dcuniverse.com/*",
		"*://*.podcasts.google.com/*",
		"*://*.hulu.com/*",
		"*://*.amazon.com/*",
		"*://mediasite.mms.rpi.edu/*",
		"*://soundcloud.com/*"
	]
}
